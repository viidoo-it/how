@import "./markdown.css";
@require "twindy";

tw-reset();

html {
  height: 100%;
  padding: 0;
  margin: 0;
}

body {
  background: #fefefe;
  color: -gray-900;
  height: 100%;
  padding: 0;
  margin: 0;
  font-family: serif;
  font-size: 16;
}

a {
  color: -blue-700;

  &:hover, &:active {
    color: -blue-500;
  }
}

#app {
  min-height: 100%;
  padding: 0;
  margin: 0;
}

.app-header, .app-footer, .app-content {
  padding-x: 32;
  margin-x: auto;
  max-width: 800;
}

.app-header {
  font-family: sans;
  padding-y: 32;
  line-height: px(24);
  color: -gray-900;
  use: stack-x;

  a {
    color: -gray-900;
    display: flex;
  }

  img {
    height: 1em;
    width: 1em;
    display: inline-block;
    margin-right: 8;
  }

  &-title {
    use: grow;
    font-size: 24;
    font-weight: 700;
  }

  a&-locale {
    display: block;
    background: -gray-200;
    color: gray-500 !important;
    font-weight: 400;
    padding-x: 8;
    border-radius: 8;
    font-size: 14;
    margin-left: 8;
  }

  a&-menu {
    margin-x: 8;
    font-size: 14;
    font-weight: 700;

    &.router-link-active {
      color: -gray-700;
    }

    color: -gray-500;

    &:hover {
      color: -gray-700;
    }
  }
}

.app-footer {
  font-family: sans;
  font-size: 14;
  padding-y: 32;
  padding-top: 64;
  opacity: 0.8;

  // color: -gray-700;
  a {
    color: -blue-900;
  }
}

.prose {
  use: prose-float;
}

.email {
  padding-y: 24;
  margin-x: auto;
}